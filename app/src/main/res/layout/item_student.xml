<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_size_5"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dp_size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_student_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_25"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_student_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别：男"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tv_student_guardian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监护人：李四"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tv_student_guardian_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监护人电话：13764503367"
                android:textSize="@dimen/text_size_15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_student_checked"
                android:layout_width="@dimen/dp_size_60"
                android:layout_height="@dimen/dp_size_60"
                android:src="@drawable/shape_corners_bt"/>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_student_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corners_bt"
                android:text="还原"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>